<%- include('./partials/header.ejs') %>

<main class="story">
    

    <article>
        <%- ctx.prismicH.asHTML(storyData.title) %>

        <% alineas.forEach(alinea => { %>
            <section id="<%= alinea.alinea_id %>">
                <% if(alinea.image.url){ %>
                    <div class="alinea_image">
                        <img src="<%= alinea.image.url %>">
                    </div>
                <% } %>
                
                <div>
                    <%- ctx.prismicH.asHTML(alinea.subtitle) %>
                    <%- ctx.prismicH.asHTML(alinea.alinea) %>

                    <% if(alinea.alinea_id == "wreckingBall"){ %>
                        <div class="wrecker"></div>
                    <% } %>
                    <% if(alinea.alinea_id == "rock"){ %>
                        <img class="rockImg" src="/images/rock.png">
                    <% } %>
                </div>
            </section>
       <% }); %>

       <div class="next_prev_cont" >
            <% if(previous){ %>
                <button class="back">
                    <a href= <%-previous.url%> class="btn_a"> < Previous</a>
                </button>
            <% } %>
            <% if(next){ %>
                <button class="next">
                    <a href= <%-next.url%> class="btn_a">Next ></a>
                </button>
            <% } %>
        </div>
    </article>
</main>

<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/gsap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/ScrollTrigger.min.js"></script>
<script src="/js/scrollingStory.js"></script>

