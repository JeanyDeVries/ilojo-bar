
<%- include('./partials/header.ejs') %>

<main class="story">
    

    <article>
        <!-- Make title in html from prismic data -->
        <%- ctx.prismicH.asHTML(storyData.title) %>

        <!-- Make alineas from prismic data -->
        <% alineas.forEach(alinea => { %>
            <section id="<%= alinea.alinea_id %>">
                <% if(alinea.image.url){ %>
                    <div class="alinea_image">
                        <img src="<%= alinea.image.url %>" alt="<%= alinea.image.alt %>">
                    </div>
                <% } %>
                
                <div>
                    <%- ctx.prismicH.asHTML(alinea.subtitle) %>
                    <%- ctx.prismicH.asHTML(alinea.alinea) %>

                    <!-- Check if wreckingball is on page then show-->
                    <% if(alinea.alinea_id == "wreckingBall"){ %>
                        <div class="containerWreckingBall">
                            <div class="wrecker"></div>
                        </div>
                    <% } %>
                    </div>
            </section>
       <% }); %>

       <div class="next_prev_cont" >
            <% if(previous){ %>
                <a href= <%-previous.url%> class="btn_a back">< Previous</a>
            <% } %>
            <% if(next){ %>
                <a href= <%-next.url%> class="btn_a next">Next ></a>
            <% } %>
        </div>
    </article>
</main>

<script defer src="/js/lib/gsap-stp-st.js"></script>
<script defer src="/js/scrollingStory.js"></script>
